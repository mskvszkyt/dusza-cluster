<Page x:Class="ClusterWPF.Pages.ModifyComputer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.modernwpf.com/2019" 
      xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Modify Computer">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label HorizontalAlignment="Center" Grid.ColumnSpan="2">Modify Computer</Label>

        <DataGrid x:Name="dataGrid" Grid.Row="1" Margin="10" GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column" AutoGenerateColumns="False" SelectionMode="Single" CanUserAddRows="False" CanUserDeleteRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Memory" Binding="{Binding MemoryCapacity}" Width="*"/>
                <DataGridTextColumn Header="Processor" Binding="{Binding ProcessorCapacity}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <ui:SimpleStackPanel Grid.Row="1" Grid.Column="1" Background="LightGray">
            <Label Margin="10" HorizontalAlignment="Center">Filters:</Label>

            <TextBox ui:ControlHelper.Header="Name:"
                     x:Name="tbComputerName"
                     Margin="10"/>

            <Label Margin="10">Memory:</Label>
            <mah:RangeSlider Margin="10"
                             Minimum="0"
                             Maximum="64"
                             TickFrequency="1"
                             IsSnapToTickEnabled="True"
                             x:Name="sldMemory"/>

            <Label Margin="10">Processor:</Label>
            <mah:RangeSlider Margin="10"
                             Minimum="0"
                             Maximum="32"
                             TickFrequency="1"
                             IsSnapToTickEnabled="True"
                             x:Name="sldProcessor"/>

            <Label HorizontalAlignment="Center" Margin="10">Selected Computer's Specs:</Label>

            <ui:SimpleStackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20">
                <TextBox ui:ControlHelper.Header="Memory:"
                         x:Name="tbMemoryChange"/>
                <TextBox ui:ControlHelper.Header="Processor:"
                         x:Name="tbProcessorChange"/>
            </ui:SimpleStackPanel>

            <Button x:Name="btnSaveComputerSpecs"
                    HorizontalAlignment="Center"
                    Margin="10">Save</Button>
        </ui:SimpleStackPanel>
    </Grid>
</Page>
