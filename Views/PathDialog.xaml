<Window x:Class="DuszaArpadWPF.Views.PathDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gyökérkönyvtár elérési útja" Height="150" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Adja meg a gyökérkönyvtár elérési útját:"/>
            <TextBox x:Name="PathTextBox"/>
            <Button Content="OK" Click="OkButton_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>