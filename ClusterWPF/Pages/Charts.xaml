<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:views="clr-namespace:ClusterWPF.Views"
      xmlns:local="clr-namespace:ClusterWPF.Pages" 
      xmlns:ui="http://schemas.modernwpf.com/2019" 
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="ClusterWPF.Pages.Charts"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Charts">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border BorderThickness="0 0 0 1" BorderBrush="{DynamicResource MahApps.Brushes.Button.Border}" Grid.ColumnSpan="2">
            <Label HorizontalAlignment="Center" Padding="10" FontSize="20" Content="Charts"/>
        </Border>
            <views:ChartView Margin="0 20 0 0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1"/>
    </Grid>
</Page>
