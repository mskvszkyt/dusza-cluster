<Page x:Class="ClusterWPF.Pages.ModifyComputer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClusterWPF.Pages"
      xmlns:ui="http://schemas.modernwpf.com/2019" 
      xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ModifyComputer">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="250"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Border BorderThickness="1" BorderBrush="{DynamicResource MahApps.Brushes.Button.Border}" Grid.ColumnSpan="2">
            <Label HorizontalAlignment="Center" Padding="10" FontSize="20">Modify computer</Label>
        </Border>
        <DataGrid x:Name="dgdatas" Grid.Row="1" Margin="10" GridLinesVisibility="Horizontal" HeadersVisibility="Column" HorizontalAlignment="Center" IsReadOnly="True" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Memory" Binding="{Binding MemoryCapacity, StringFormat='0 MB'}" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Procesor" Binding="{Binding ProcessorCapacity, StringFormat='0 mm'}" Width="*"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <ui:SimpleStackPanel Grid.Row="1" Grid.Column="1" Background="{DynamicResource MahApps.Brushes.SystemControlBackgroundListLow}">
            <Label Margin="10" HorizontalAlignment="Center" FontSize="18">Filters:</Label>
            <Border BorderThickness="1" BorderBrush="{DynamicResource MahApps.Brushes.Button.Border}" Margin="0 0 0 10" ></Border>
            
            <TextBox
                ui:ControlHelper.Header="Name:"
                x:Name="tbComputerName"
                Margin="10"
                />
            
            <Label Margin="10">
                Memory usage:
            </Label>
            
            <mah:RangeSlider Margin="10"
                             Minimum="0"
                             Maximum="20" 
                             TickFrequency="1"
                             IsSnapToTickEnabled="True"
                             x:Name="sldMemory"
                             
                             />
            <!--TODO: maximumot kicserélni az elérhető legnagyobb adattal-->

            <Label Margin="10">
                Processor usage:
            </Label>
            
            <mah:RangeSlider Margin="10"
                             Minimum="0"
                             Maximum="20" 
                             TickFrequency="1"
                             IsSnapToTickEnabled="True"
                             x:Name="sldProcessor"
                             />
            
            <Border BorderThickness="1" BorderBrush="{DynamicResource MahApps.Brushes.Button.Border}" Margin="0 10 0 10"></Border>
            <Label HorizontalAlignment="Center" Margin="10" FontSize="16">Selected computer's specs:</Label>
            <ui:SimpleStackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20">
                
                <TextBox
                ui:ControlHelper.Header="Memory usage:"
                Text=""
                x:Name="tbMemoryChange"/>
                
                <TextBox
                ui:ControlHelper.Header="Processor usage:"
                Text=""
                x:Name="tbProcessorChange"/>
                
            </ui:SimpleStackPanel>

            <Button x:Name="btnSaveComputerSpecs" HorizontalAlignment="Center" Margin="10">Save</Button>

        </ui:SimpleStackPanel>
    </Grid>
</Page>
