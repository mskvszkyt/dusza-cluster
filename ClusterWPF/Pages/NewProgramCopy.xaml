<Page x:Class="ClusterWPF.Pages.NewProgramCopy"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.modernwpf.com/2019" 
      xmlns:local="clr-namespace:ClusterWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewProgramCopy">

    <Grid>
        <ui:SimpleStackPanel Spacing="20">
            <Label HorizontalAlignment="Center">Remove computer</Label>
            <ui:SimpleStackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <ui:SimpleStackPanel Margin="40 20 40 20" Grid.Row="0">
                    <Label Padding="10" HorizontalAlignment="Center">Computers:</Label>
                    <ListBox x:Name="lbExistingComputers"></ListBox>
                    <TextBox
                        Margin="10 0 10 0"
                        ui:ControlHelper.PlaceholderText="Search computer..."
                        x:Name="tbExistingComputersSearch"
                        TextAlignment="Center">
                    </TextBox>
                </ui:SimpleStackPanel>
                <ui:SimpleStackPanel Margin="40 20 40 20" Grid.Row="0">
                    <Label Padding="10" HorizontalAlignment="Center">Existing programs:</Label>
                    <ListBox x:Name="lbExistingPrograms"></ListBox>
                    <TextBox
                        Margin="10 0 10 0"
                        ui:ControlHelper.PlaceholderText="Search program..."
                        x:Name="tbExistingProgramSearch"
                        TextAlignment="Center">
                    </TextBox>
                </ui:SimpleStackPanel>
            </ui:SimpleStackPanel>
                <Button x:Name="btnRunProgram" HorizontalAlignment="Center" Grid.Row="1">Run Program</Button>
            <ui:SimpleStackPanel>
                <TextBox
                            ui:ControlHelper.PlaceholderText="New program's name..."
                            x:Name="tbNewProgramName"
                            TextAlignment="Center"
                            Width="200px">
                </TextBox>
                <Button x:Name="btnRunNewProgram" HorizontalAlignment="Center" Grid.Row="1" Width="200px">Run a new program</Button>
            </ui:SimpleStackPanel>
        </ui:SimpleStackPanel>
    </Grid>
</Page>
