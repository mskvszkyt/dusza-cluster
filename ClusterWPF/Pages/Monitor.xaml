            <Label FontSize="20" Padding="5" HorizontalAlignment="Center">PC1</Label>
            <Border BorderThickness="1" BorderBrush="{DynamicResource MahApps.Brushes.Button.Border}"></Border>
            <Image Width="100" Height="80" Source="Images/PC.png" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleY="0"/>
                        <RotateTransform/>
                        <TranslateTransform Y="0"/>
                    </TransformGroup>
                </Image.RenderTransform></Image>
        
            <Border BorderThickness="2" BorderBrush="{DynamicResource AccentBrush}"></Border>
            <Label Padding="5">Memory Usage:</Label>
        
            <Border BorderThickness="1" BorderBrush="{DynamicResource MahApps.Brushes.Button.Border}"></Border>
            <Label HorizontalAlignment="Center" Padding="0 5 0 0">1000/1200</Label>
            <ui:ProgressBar Margin="5" Value="70" Foreground="Yellow"></ui:ProgressBar>
        
            <Border BorderThickness="2" BorderBrush="{DynamicResource AccentBrush}"></Border>
            <Label Padding="5">Processor Usage:</Label>
        
            <Border BorderThickness="1" BorderBrush="{DynamicResource MahApps.Brushes.Button.Border}"></Border>
            <Label HorizontalAlignment="Center" Padding="0 5 0 0">20/100</Label>
            <ui:ProgressBar Margin="5" Value="20" Foreground="Green"></ui:ProgressBar>
        
            <Border BorderThickness="2" BorderBrush="{DynamicResource AccentBrush}"></Border>
            <Button HorizontalAlignment="Center" Width="200" Margin="5">Remove</Button>
        </ui:SimpleStackPanel>
    </Border>
