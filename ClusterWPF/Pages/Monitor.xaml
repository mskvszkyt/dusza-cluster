<Page x:Class="ClusterWPF.Pages.Monitor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClusterWPF.Pages"
      mc:Ignorable="d" 
      xmlns:ui="http://schemas.modernwpf.com/2019" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Monitor">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="250"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Border BorderThickness="1" BorderBrush="{DynamicResource MahApps.Brushes.Button.Border}" Grid.ColumnSpan="2">
                <ui:SimpleStackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Label Padding="10" FontSize="20">Monitoring:</Label>
                    <Label Padding="00 10 10 10" FontSize="20" x:Name="lbMonitoring">Example</Label>
                </ui:SimpleStackPanel>
            </Border>
            <Grid Grid.Row="1" Grid.Column="1" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <ui:SimpleStackPanel Background="{DynamicResource MahApps.Brushes.SystemControlBackgroundListLow}" VerticalAlignment="Stretch">
                    <Label Margin="10" HorizontalAlignment="Center" FontSize="18">Statistics:</Label>
                    <Border BorderThickness="1" BorderBrush="{DynamicResource MahApps.Brushes.Button.Border}" Margin="0 0 0 10" ></Border>

                    <ui:SimpleStackPanel Orientation="Horizontal">
                        <Label Margin="10 0 0 0" FontSize="16">Active processes:</Label>
                        <Label Margin="5 0 0 0" FontSize="16" x:Name="lbActiveProcesses" FontWeight="Bold" Foreground="{DynamicResource AccentBrush}">0</Label>
                    </ui:SimpleStackPanel>

                    <ui:SimpleStackPanel Orientation="Horizontal">
                        <Label Margin="10 0 0 0" FontSize="16">Inactive processes:</Label>
                        <Label Margin="5 0 0 0" FontSize="16" x:Name="lbInactiveProcesses" FontWeight="Bold" Foreground="{DynamicResource AccentBrush}">0</Label>
                    </ui:SimpleStackPanel>

                    <ui:SimpleStackPanel Orientation="Horizontal">
                        <Label Margin="10 0 0 0" FontSize="16">Cluster status:</Label>
                        <Label Margin="5 0 0 0" FontSize="16" x:Name="lbClusterStatus" FontWeight="Bold" Foreground="Green">Correct</Label>
                    </ui:SimpleStackPanel>

                    <Border BorderThickness="1" BorderBrush="{DynamicResource MahApps.Brushes.Button.Border}" Margin="0 10 0 0"></Border>
                    <ComboBox FontSize="16" HorizontalAlignment="Stretch" Padding="5 10">
                            <ComboBoxItem Content="Running programs details"/>
                            <ComboBoxItem Content="Search a specific program"/>
                    </ComboBox>
                </ui:SimpleStackPanel>
                <ScrollViewer VerticalScrollBarVisibility="Auto" VerticalAlignment="Stretch" Grid.Row="1" Background="{DynamicResource MahApps.Brushes.SystemControlBackgroundListLow}" Visibility="Collapsed" Padding="0 0 10 0">
                    <!--Teszt adatok vannak a stackpanelben-->
                        <ui:SimpleStackPanel x:Name="ProgramDetailsContainer">
                            <Expander
                                Padding="10"
                                Header="ProgramName: 2 copy"
                                ExpandDirection="Down"
                                IsExpanded="False"
                                FontSize="16"
                                Focusable="False">
                                <ListBox VerticalAlignment="Stretch" IsHitTestVisible="False">
                            
                                    <ListBoxItem VerticalAlignment="Stretch">
                                        <ui:SimpleStackPanel Orientation="Horizontal">
                                            <Label>8f024</Label>
                                            <Label Margin="10 0">:</Label>
                                            <Label Foreground="Red">Inactive</Label>
                                        </ui:SimpleStackPanel>
                                    </ListBoxItem>
                        
                                    <ListBoxItem>
                                        <ui:SimpleStackPanel Orientation="Horizontal">
                                            <Label>210SD</Label>
                                            <Label Margin="10 0">:</Label>
                                            <Label Foreground="Green">Active</Label>
                                        </ui:SimpleStackPanel>
                                    </ListBoxItem>
                            
                                </ListBox>
                            </Expander>

                            <Expander
                                Padding="10"
                                Header="ProgramName: 5 copy"
                                ExpandDirection="Down"
                                IsExpanded="False"
                                FontSize="16"
                                Focusable="False">
                                <ListBox VerticalAlignment="Stretch" IsHitTestVisible="False">

                                    <ListBoxItem VerticalAlignment="Stretch">
                                        <ui:SimpleStackPanel Orientation="Horizontal">
                                            <Label>8f024</Label>
                                            <Label Margin="10 0">:</Label>
                                            <Label Foreground="Red">Inactive</Label>
                                        </ui:SimpleStackPanel>
                                    </ListBoxItem>

                                    <ListBoxItem VerticalAlignment="Stretch">
                                        <ui:SimpleStackPanel Orientation="Horizontal">
                                            <Label>8f024</Label>
                                            <Label Margin="10 0">:</Label>
                                            <Label Foreground="Red">Inactive</Label>
                                        </ui:SimpleStackPanel>
                                    </ListBoxItem>

                                    <ListBoxItem VerticalAlignment="Stretch">
                                        <ui:SimpleStackPanel Orientation="Horizontal">
                                            <Label>8f024</Label>
                                            <Label Margin="10 0">:</Label>
                                            <Label Foreground="Red">Inactive</Label>
                                        </ui:SimpleStackPanel>
                                    </ListBoxItem>

                                    <ListBoxItem VerticalAlignment="Stretch">
                                        <ui:SimpleStackPanel Orientation="Horizontal">
                                            <Label>8f024</Label>
                                            <Label Margin="10 0">:</Label>
                                            <Label Foreground="Red">Inactive</Label>
                                        </ui:SimpleStackPanel>
                                    </ListBoxItem>

                                    <ListBoxItem>
                                        <ui:SimpleStackPanel Orientation="Horizontal">
                                            <Label>210SD</Label>
                                            <Label Margin="10 0">:</Label>
                                            <Label Foreground="Green">Active</Label>
                                        </ui:SimpleStackPanel>
                                    </ListBoxItem>

                                </ListBox>
                            </Expander>

                            <Expander
                                Padding="10"
                                Header="ProgramName: 2 copy"
                                ExpandDirection="Down"
                                IsExpanded="False"
                                FontSize="16"
                                Focusable="False">
                                <ListBox VerticalAlignment="Stretch" IsHitTestVisible="False">

                                    <ListBoxItem VerticalAlignment="Stretch">
                                        <ui:SimpleStackPanel Orientation="Horizontal">
                                            <Label>8f024</Label>
                                            <Label Margin="10 0">:</Label>
                                            <Label Foreground="Green">Active</Label>
                                        </ui:SimpleStackPanel>
                                    </ListBoxItem>

                                    <ListBoxItem>
                                        <ui:SimpleStackPanel Orientation="Horizontal">
                                            <Label>210SD</Label>
                                            <Label Margin="10 0">:</Label>
                                            <Label Foreground="Red">Inactive</Label>
                                        </ui:SimpleStackPanel>
                                    </ListBoxItem>

                                </ListBox>
                            </Expander>
                        </ui:SimpleStackPanel>
                </ScrollViewer>
                <ScrollViewer VerticalScrollBarVisibility="Auto" VerticalAlignment="Stretch" Grid.Row="1" Background="{DynamicResource MahApps.Brushes.SystemControlBackgroundListLow}" Visibility="Visible" Padding="0 0 10 0">
                    
                </ScrollViewer>
            </Grid>
        </Grid>

</Page>
