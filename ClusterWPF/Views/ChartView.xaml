<UserControl x:Class="ClusterWPF.Views.ChartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:vms="clr-namespace:ClusterWPF.ViewModels">
    <UserControl.DataContext>
        <vms:ViewModel />
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Command="{Binding ToggleSeries0Command}" Margin="8 0" Padding="5">Toggle memory usage</Button>
            <Button Command="{Binding ToggleSeries1Command}" Margin="8 0" Padding="5">Toggle processor usage</Button>
            <Button Command="{Binding ToggleSeries2Command}" Margin="8 0" Padding="5">Toggle average usage</Button>
        </StackPanel>

        <!-- Add ScrollViewer -->
        <ScrollViewer 
            Grid.Row="1" 
            HorizontalScrollBarVisibility="Auto" 
            VerticalScrollBarVisibility="Disabled">
            <lvc:CartesianChart 
                Width="{Binding ChartWidth}"
                HorizontalAlignment="Left"
                Series="{Binding Series}" 
                XAxes="{Binding XAxes}"
                LegendPosition="Hidden">
            </lvc:CartesianChart>
        </ScrollViewer>
    </Grid>
</UserControl>